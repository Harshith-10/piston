#!/usr/bin/env bash

# Rename the input file to have the correct extension (required by Java)
# Rename the input file to have the correct extension (required by Java)
if [[ "$1" != *.java ]]; then
    cp "$1" "$1.java"
    filename="$1.java"
else
    filename="$1"
fi
shift

# Compile (if needed) and run
# For single-file source code, newer Java versions can run directly:
java $filename "$@"